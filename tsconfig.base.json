{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "target": "ES2022",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
